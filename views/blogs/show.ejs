<%- include("../partials/header")%>
<%- include("../partials/navbar2")%>

<div class="container" style="padding-top: 10px;">
    <img src="<%=blog.avatar%>" class="" style="width: 80vw; max-height: 70vh;" alt="...">
    <div class="card-body">
        <h5 class="card-title"><%=blog.title%></h5>
        <p class="card-text"><%=blog.text%></p>
        <a href="/blog/<%=blog._id%>/edit" class="btn btn-primary">Edit</a>
        <div class="mt-3">
            <form action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
                 
    </div>
    <h4 style="padding-top: 10px;">Add a comment</h4>
    <form class="validated-form" action="/blog/<%=blog._id%>/review" method="POST" style="max-width:70%;" novalidate>

        <div class="mb-3">
            <!-- <label for="desc" class="form-label">Comment</label> -->
            <textarea class="form-control" id="comment" cols="35" rows="3" name="comment" required></textarea>
            <div class="valid-feedback">
            Looks good!
            </div>
        </div>
    
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    <div class="mb-3 mt-3">
        <%for(let review of blog.reviews){%>
            <div class="card mb-3">
                <div class="card-header">
                    <%=review.user%>
                </div>
                <div class="card-body">
                  <p class="card-text"><%=review.comment%></p>
                </div>
              </div>

        <%}%>
    </div>

    </div>




</div>


<%- include("../partials/footer")%>